{
  "name": "parent-child-monitoring-backend",
  "version": "1.0.0",
  "description": "Backend server for Persian Parent-Child Monitoring System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand",
    "lint": "eslint . --ext .js --fix",
    "lint:ci": "eslint . --ext .js",
    "test:coverage": "jest --coverage --runInBand",
    "db:migrate": "npx sequelize-cli db:migrate --config src/config/sequelize-cli.js",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo --config src/config/sequelize-cli.js",
    "db:seed": "npx sequelize-cli db:seed:all --config src/config/sequelize-cli.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js"
  },
  "keywords": [
    "monitoring",
    "parent",
    "child",
    "safety",
    "persian",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.10.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.3",
    "sequelize": "^6.32.1",
    "sharp": "^0.32.4",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
